@model CosmeticsPerfectView.Data.Order

@{
    ViewData["Title"] = "Delete";
}

<main class="order-delete-page">
    <header>
        <h1>Изтрий поръчка</h1>
        <p class="confirm-text">Сигурни ли сте, че искате да изтриете тази поръчка?</p>
    </header>

    <section class="details-box">
        <dl>
            <dt>@Html.DisplayNameFor(model => model.Users)</dt>
            <dd>@Html.DisplayFor(model => model.Users.Id)</dd>

            <dt>@Html.DisplayNameFor(model => model.Products)</dt>
            <dd>@Html.DisplayFor(model => model.Products.Id)</dd>

            <dt>@Html.DisplayNameFor(model => model.OrderQuantity)</dt>
            <dd>@Html.DisplayFor(model => model.OrderQuantity)</dd>

            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>
        </dl>
    </section>

    <form asp-action="Delete" method="post" class="delete-form">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-delete">Изтрий</button>
        <a asp-action="Index" class="btn-cancel">Отказ</a>
    </form>
</main>
<style>
    .order-delete-page {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        font-family: sans-serif;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 8px rgba(0,0,0,0.05);
    }

        .order-delete-page h1 {
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
        }

    .confirm-text {
        color: #c62828;
        font-weight: 500;
        margin-bottom: 1.5rem;
    }

    .details-box dl {
        display: grid;
        grid-template-columns: max-content 1fr;
        row-gap: 1rem;
        column-gap: 1rem;
    }

    .details-box dt {
        font-weight: bold;
    }

    .details-box dd {
        margin: 0;
    }

    .delete-form {
        margin-top: 2rem;
        display: flex;
        gap: 1rem;
    }

    .btn-delete {
        background-color: #d32f2f;
        color: white;
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

        .btn-delete:hover {
            background-color: #b71c1c;
        }

    .btn-cancel {
        text-decoration: none;
        color: #1976d2;
        padding: 0.6rem 1.2rem;
        border-radius: 5px;
        border: 1px solid #1976d2;
        transition: background 0.2s;
    }

        .btn-cancel:hover {
            background-color: #e3f2fd;
        }
</style>
