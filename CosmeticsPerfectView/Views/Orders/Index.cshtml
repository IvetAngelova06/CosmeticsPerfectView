@model IEnumerable<CosmeticsPerfectView.Data.Order>

@{
	ViewData["Title"] = "Поръчки";
}

<main class="order-index-page">
	<header class="header">
		<h2>Поръчки</h2>
	</header>

	<table class="order-table">
		<thead>
			<tr>
				<th>Потребител</th>
				<th>Продукт</th>
				<th>Описание</th>
				<th>Действия</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.Users.UserName)</td>
					<td>@Html.DisplayFor(modelItem => item.Products.Name)</td>
					<td>@Html.DisplayFor(modelItem => item.Description)</td>
					<td class="actions">
						<a asp-action="Details" asp-route-id="@item.Id">Детайли</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Изтриване</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</main>
<style>
	.order-index-page {
		max-width: 1000px;
		margin: 2rem auto;
		padding: 1.5rem;
		font-family: sans-serif;
		background: #fff;
		border-radius: 10px;
		box-shadow: 0 0 8px rgba(0,0,0,0.05);
	}

		.order-index-page .header {
			display: flex;
			justify-content: space-between;
			align-items: center;
			margin-bottom: 1.5rem;
		}

		.order-index-page h2 {
			font-size: 1.8rem;
			color: #333;
		}

	.btn-create {
		text-decoration: none;
		background-color: #4CAF50;
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 5px;
		font-weight: 500;
		transition: background-color 0.2s ease-in-out;
	}

		.btn-create:hover {
			background-color: #388e3c;
		}

	.order-table {
		width: 100%;
		border-collapse: collapse;
	}

		.order-table th,
		.order-table td {
			border: 1px solid #ddd;
			padding: 0.75rem;
			text-align: left;
		}

		.order-table th {
			background-color: #f5f5f5;
			font-weight: bold;
			color: #333;
		}

		.order-table tr:nth-child(even) {
			background-color: #fafafa;
		}

		.order-table a {
			color: #1976d2;
			text-decoration: none;
			margin-right: 1rem;
			font-weight: 500;
		}

			.order-table a:hover {
				text-decoration: underline;
			}

		.order-table .text-danger {
			color: #d32f2f;
		}
</style>