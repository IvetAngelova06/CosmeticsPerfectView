@model CosmeticsPerfectView.Data.Order

@{
    ViewData["Title"] = "Details";
}

<main class="order-details-page">
    <header>
        <h2>Детайли за поръчката</h2>
    </header>

    <section class="details-box">
        <dl>
            <dt>Потребител</dt>
            <dd>@Html.DisplayFor(model => model.Users.Email)</dd>

            <dt>Продукт</dt>
            <dd>@Html.DisplayFor(model => model.Products.Name)</dd>

            <dt>Описание</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>
        </dl>
    </section>

    <nav class="back-link">
        <a asp-action="Index">⬅ Назад към списъка</a>
    </nav>
</main>
<style>
    .order-details-page {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        font-family: sans-serif;
        background-color: #fdfdfd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

        .order-details-page header h2 {
            margin-bottom: 1.5rem;
            font-size: 1.8rem;
            color: #333;
        }

    .details-box dl {
        display: grid;
        grid-template-columns: max-content 1fr;
        row-gap: 1rem;
        column-gap: 1rem;
    }

    .details-box dt {
        font-weight: bold;
        color: #555;
    }

    .details-box dd {
        margin: 0;
        color: #222;
    }

    .back-link {
        margin-top: 2rem;
        text-align: left;
    }

        .back-link a {
            text-decoration: none;
            color: #1976d2;
            font-weight: 500;
        }

            .back-link a:hover {
                text-decoration: underline;
            }

</style>
