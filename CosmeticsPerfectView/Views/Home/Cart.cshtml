@{
	ViewData["Title"] = "Cart";
}

@model List<CosmeticsPerfectView.Data.Product>

<h2>Кошница</h2>
@if (!Model.Any())
{
	<p>Кошницата ви е празна.</p>
}

else
{
	<div class="row">
		@foreach (var product in Model)
		{
			<div class="col-md-4 mb-4">
				<div class="card h-100 shadow-sm">
					<img src="@product.URLimage" class="card-img-top" alt="@product.Name" style="object-fit: cover; height: 200px;" />
					<div class="card-body d-flex flex-column">
						<h5 class="card-title">@product.Name</h5>
						<p class="card-text">@product.Price лв.</p>
						<form asp-action="RemoveFromCart" asp-controller="Home" asp-route-id="@product.Id" method="post" class="mt-auto">
							<button type="submit" class="btn btn-danger w-100">Премахни</button>
						</form>
					</div>
				</div>
			</div>
		}
	</div>
	<form asp-controller="Orders" asp-action="ConfirmOrder" method="post">
		<button type="submit" class="btn btn-success btn-lg">
			Потвърди поръчка
		</button>
	</form>

	<form asp-action="ClearCart" method="post">
		<button type="submit">Изчисти кошницата</button>
	</form>
}




















