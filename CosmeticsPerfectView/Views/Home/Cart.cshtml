
@{
    ViewData["Title"] = "Cart";
}

@model List<CosmeticsPerfectView.Data.Product>

<h2>Кошница</h2>
@if (!Model.Any())
{
    <p>Кошницата ви е празна.</p>
}
else
{
    <table class="table">
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>
                        <img src="@product.URLimage" alt="@product.Name" width="100" />
                    </td>
                    <td>@product.Price лв.</td>
                    <td>
                        <form asp-action="RemoveFromCart" asp-controller="Home" asp-route-id="@product.Id" method="post">
                            <button type="submit" class="btn btn-danger">Премахни</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form asp-action="ClearCart" method="post">
        <button type="submit">Изчисти кошницата</button>
    </form>
}




















