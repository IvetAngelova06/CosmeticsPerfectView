@model CosmeticsPerfectView.Data.ProductType

@{
    ViewData["Title"] = "Изтриване на тип продукт";
}

<main class="delete-page">
    <header class="header">
        <h2>Сигурни ли сте, че искате да изтриете това?</h2>
        <p class="subtitle">Тип продукт: <strong>@Model.Name</strong></p>
    </header>

    <section class="data-preview">
        <div class="preview-field">
            <label>Име:</label>
            <div>@Html.DisplayFor(model => model.Name)</div>
        </div>
        <div class="preview-field">
            <label>Описание:</label>
            <div>@Html.DisplayFor(model => model.Description)</div>
        </div>
    </section>

    <form asp-action="Delete" class="delete-form">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn delete-btn">Изтрий</button>
        <a asp-action="Index" class="btn back-btn">Назад</a>
    </form>
</main>
<style>
    .delete-page {
        max-width: 600px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
        font-family: sans-serif;
    }

    .header h2 {
        margin: 0 0 0.5rem 0;
        font-size: 1.5rem;
        color: #c62828;
    }

    .subtitle {
        color: #555;
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }

    .data-preview {
        margin-bottom: 2rem;
    }

    .preview-field {
        margin-bottom: 1rem;
    }

        .preview-field label {
            font-weight: bold;
            display: block;
            margin-bottom: 0.3rem;
        }

    .delete-form {
        display: flex;
        gap: 1rem;
    }

    .btn {
        padding: 0.6rem 1.2rem;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

    .delete-btn {
        background-color: #e53935;
        color: white;
    }

        .delete-btn:hover {
            background-color: #c62828;
        }

    .back-btn {
        background-color: #eee;
        color: #333;
    }

        .back-btn:hover {
            background-color: #ddd;
        }

</style>
