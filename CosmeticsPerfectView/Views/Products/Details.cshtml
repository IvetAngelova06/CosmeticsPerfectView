@model CosmeticsPerfectView.Data.Product

@{
	ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Categories.Name)</h1>


<div class="box">
	<div class="img">
		<img width="150" src="@Html.DisplayFor(model => model.URLimage)" />
	</div>
	<div class="text">
		<h3> @Html.DisplayFor(model => model.Name)</h3>
		<p> @Html.DisplayFor(model => model.ProductTypes.Name)</p>
		<p> @Html.DisplayFor(model => model.Price) лв.</p>

	</div>
</div>
<div class="opisanie">
	<div class="tab">
		<h3>Описание @Html.DisplayFor(model => model.Name)</h3>
	</div>
	<div class="harakteristika">
		<p>
			@Html.DisplayFor(model => model.Description)
		</p>
	</div>
</div>
<div>
	@if (User.IsInRole("Admin"))
	{
		<a asp-action="Edit" asp-route-id="@Model?.Id">Редактирай</a> 
	}
</div>




