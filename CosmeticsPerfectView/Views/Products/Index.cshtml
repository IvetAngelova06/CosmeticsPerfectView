@model IEnumerable<CosmeticsPerfectView.Data.Product>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin"))
{
	<p>
		<a asp-action="Create">Create New</a>
	</p>
}
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Categories)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ProductTypes)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.URLimage)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PromoPercent)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			@if (User.IsInRole("Admin"))
			{
				<th>
					@Html.DisplayNameFor(model => model.DateRegister)
				</th>
			}
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Categories.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ProductTypes.Name)
				</td>
				<td>
					<img src="@Html.DisplayFor(modelItem => item.URLimage)" width="100" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PromoPercent)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				@if (User.IsInRole("Admin"))
				{
					<td>
						@Html.DisplayFor(modelItem => item.DateRegister)
					</td>
				}
				<td>
					<a asp-action="Details" asp-route-id="@item.Id">Details</a>
					@if (User.IsInRole("Admin"))
					{
						<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					}

				</td>
			</tr>
		}
	</tbody>
</table>
