@model CosmeticsPerfectView.Data.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Изтриване на продукт</h1>

<h3>Сигурни ли сте, че искате да изтриете този продукт?</h3>
<div>
    <h4>Продукт</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Продукт</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Категория</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Categories.Name)</dd>

        <dt class="col-sm-2">Вид продукт</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductTypes.Name)</dd>

        <dt class="col-sm-2">Снимка</dt>
        <dd class="col-sm-10">
            <img src="@Model.URLimage" alt="Product Image" style="max-width:150px;" />
        </dd>

        <dt class="col-sm-2">Цена</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>

        <dt class="col-sm-2">Промоция</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PromoPercent)</dd>

        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">Дата на регистрация</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DateRegister)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Назад към списъка</a>
    </form>
</div>
<style>
    <style >
    h1 {
        color: #333;
        margin-bottom: 20px;
    }

    h3 {
        font-weight: normal;
        margin-bottom: 15px;
    }

    dl.row {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 15px;
        max-width: 600px;
    }

    dt.col-sm-2 {
        font-weight: 600;
        padding-top: 8px;
        color: #555;
    }

    dd.col-sm-10 {
        padding-top: 8px;
        margin-left: 0;
    }

    form {
        margin-top: 20px;
    }

    input[type="submit"] {
        background-color: #dc3545; /* bootstrap danger red */
        border: none;
        padding: 8px 20px;
        color: white;
        border-radius: 4px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.25s ease;
    }

        input[type="submit"]:hover {
            background-color: #b02a37;
        }

    a {
        margin-left: 10px;
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
            color: #0056b3;
        }
</style>
</style>
