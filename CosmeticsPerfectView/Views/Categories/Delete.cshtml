@model CosmeticsPerfectView.Data.Category

@{
    ViewData["Title"] = "Delete";
}

<main class="category-delete-page">

    <header>
        <h1>Изтриване на категория</h1>
        <h3>Сигурни ли сте, че искате да изтриете тази категория?</h3>
    </header>

    <section class="category-info">
        <h2>@Html.DisplayNameFor(model => model.Name)</h2>
        <p>@Html.DisplayFor(model => model.Name)</p>

        <h2>@Html.DisplayNameFor(model => model.Description)</h2>
        <p>@Html.DisplayFor(model => model.Description)</p>
    </section>

    <form asp-action="Delete" method="post" class="delete-form">
        <input type="hidden" asp-for="Id" />
        <div class="form-actions">
            <input type="submit" value="Изтрий" />
            <a asp-action="Index" class="cancel-link">Отказ</a>
        </div>
    </form>

</main>

<style>
    .category-delete-page {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #fff8f8;
        border: 1px solid #e0b4b4;
        border-radius: 8px;
        font-family: sans-serif;
    }

        .category-delete-page header h1 {
            color: #b30000;
            margin-bottom: 0.5rem;
        }

        .category-delete-page header h3 {
            color: #333;
            font-weight: normal;
            margin-bottom: 2rem;
        }

    .category-info h2 {
        margin-top: 1rem;
        font-size: 1.1rem;
        color: #555;
    }

    .category-info p {
        margin-bottom: 1rem;
        color: #333;
    }

    .delete-form .form-actions {
        margin-top: 2rem;
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .delete-form input[type="submit"] {
        padding: 0.6rem 1.5rem;
        background-color: #d32f2f;
        color: white;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
    }

        .delete-form input[type="submit"]:hover {
            background-color: #b71c1c;
        }

    .cancel-link {
        color: #555;
        text-decoration: none;
    }

        .cancel-link:hover {
            text-decoration: underline;
        }
</style>